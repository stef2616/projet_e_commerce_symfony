{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
 <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 100%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style> 
    

<div class="example-wrapper">
    <h1>Category</h1> <br>
    {% include 'layouts/_flash_message.html.twig' %} 
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
             <th>
             <a href="{{ path('app_category_add') }}" class="btn btn-outline-secondary" id="btn2">Add Category</a>
             </th>
        </tr>
 {% for category in category %}
        <tr>
            <td>{{ category.id }} -</td>
            <td>{{ category.name}}</td>
            <td>
            <a href="{{ path('app_category_update', {'id': category.id}) }}" class="btn btn-outline-primary" id="btn2">Edit</a>
            <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-outline-danger" id="btn2" onclick="return confirm('Do you really want delete this category ?')">Delete</a>
            </td>
        </tr>
    
    {% endfor %}
    </table>
</div>
{% endblock %}
