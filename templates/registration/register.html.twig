{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
 
    <div class="container_reg">
    <div class="form-control1">
     
        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        
            {{ form_row(registrationForm.firstname , {'attr':{'class':'form form-control'}}) }}
            {{ form_row(registrationForm.lastname , {'attr':{'class':'form form-control'}}) }}
            {{ form_row(registrationForm.email , {'attr':{'class':'form form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {label:'Password','attr':{'class':'form form-control'}
            }) }}
            {{ form_row(registrationForm.agreeTerms , {'attr':{'class':'form form-check'}}) }}

            <button type="submit" class="btn btn-primary">Register</button>
            
        {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
